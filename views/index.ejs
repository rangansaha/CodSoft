<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Capital City Quiz</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/styles/main.css">

  
</head>
<body id="app">

  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <form class="quiz-card text-center" action="/submit" method="post">

          <!-- Score Display -->
          <div class="mb-3 text-start">
            <h5>Total Score: 
              <span id="score"><%= locals.totalScore ? totalScore : "0" %></span>
            </h5>
          </div>

          <!-- Country Question -->
          <h2 class="mb-4">What is the capital of <strong><%= question.country %></strong>?</h2>

          <!-- Options -->
          <div class="text-start">
            <% question.options.forEach(function(option, index) { %>
              <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="answer" value="<%= option %>" id="opt<%= index %>" required>
                <label class="form-check-label" for="opt<%= index %>"><%= option %></label>
              </div>
            <% }); %>
          </div>

          <!-- Submit Button -->
          <button type="submit" class="btn btn-primary w-100 mt-4">Submit</button>

          <!-- Feedback -->
          <div class="mt-3">
            <% if (locals.wasCorrect) { %>
              <span class="checkmark">‚úî</span>
            <% } else if (locals.wasCorrect === false) { %>
              <span class="cross" id="error">‚úñ</span>
            <% } %>
          </div>

        </form>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-light text-center text-lg-start border-top mt-auto">
    <div class="container p-4">
      <p class="mb-2">üåç World Capital Quiz &copy; 2025 | Made by Rangan</p>
      <div class="d-flex justify-content-center gap-4">
        <a href="https://www.linkedin.com/in/rangan-saha-4304b3334/" target="_blank" class="text-decoration-none text-primary">
          <i class="fab fa-linkedin fa-lg"></i>
        </a>
        <a href="https://github.com/rangansaha" target="_blank" class="text-decoration-none text-dark">
          <i class="fab fa-github fa-lg"></i>
        </a>
        <a href="https://www.facebook.com/rangan.saha.100" target="_blank" class="text-decoration-none text-primary">
          <i class="fab fa-facebook fa-lg"></i>
        </a>
        <a href="https://www.instagram.com/rangan_saha_/_" target="_blank" class="text-decoration-none text-danger">
          <i class="fab fa-instagram fa-lg"></i>
        </a>
      </div>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Feedback Script -->
  <script>
    var wasCorrect = "<%= locals.wasCorrect %>";
    if (wasCorrect === "false") {
      document.getElementById("app").innerHTML = `
        <main>
          <div class=quiz-card>
            <h2>Game Over! Your final score is: <%= locals.totalScore %></h2>
            <a href="/" class="btn btn-primary w-100 mt-4">Home</a>
            <a href="/quiz" class="btn btn-primary w-100 mt-4">Restart</a>
          </div>
        </main>
      `;
    }
  </script>
</body>
</html>